@using Sitecore.Mvc
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Unit tests Demo</title>
    <link href="/Content/bootstrap.min.css" rel="stylesheet"/>
    <link href="/Content/Site.css" rel="stylesheet" />
</head>
<body>
<div>
    <header class="navbar navbar-static-top" id="top" role="banner">
        <div class="container">
            <div>
                <a href="../" class="navbar-brand">Unit Tests Demo</a>
            </div>
            <nav>
                <ul class="nav navbar-nav pull-right">
                    <li>
                        @if (Session[UT.Presentation.Web.Constants.SessionKeys.CustomerNumber] != null)
                        {
                            <a href="@Url.Action("Logout", "Login")">Log Out</a>
                        }
                    </li>
                </ul>
            </nav>
        </div>
    </header>
    <div class="container">
        <div class="col-md-12"></div>
        <div class="col-md-12">
            <div class="row">
                <h1>@Html.Sitecore().Field("Title")</h1>
            </div>
            <div class="row">
                @Html.Sitecore().Placeholder("phMain")
            </div>
        </div>
    </div>
</div>
</body>
</html>
